{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "outDir": "./build/cjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmit": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ESNext",
        "types": ["node"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["./build/"],
    "include": ["./src/"]
}
